<div class="container mt-sm">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, "вопрос", "вопроса", "вопросов") %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="container">
    <% if question.hidden? %>
      <div class="question-hidden">
        <%= render question %>
      </div>
    <% else %>
      <%= render question %>
    <% end %>
  </div>
<% end %>
